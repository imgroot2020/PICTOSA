<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/texture2"
    tools:context=".MainMenu">


    <Button
        android:id="@+id/crop"
        android:layout_width="141dp"
        android:layout_height="140dp"
        android:background="@drawable/crop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="CROP/ROTATE"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/amaranth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/crop"
        app:layout_constraintStart_toStartOf="@+id/crop"
        app:layout_constraintTop_toBottomOf="@+id/crop"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/contrast"
        android:layout_width="136dp"
        android:layout_height="133dp"
        android:background="@drawable/contrast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="137dp"
        android:layout_height="56dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:gravity="center"
        android:text="CONTRAST"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/amaranth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/contrast"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="@+id/contrast"
        app:layout_constraintTop_toBottomOf="@+id/contrast"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/filter"
        android:layout_width="132dp"
        android:layout_height="131dp"
        android:alpha="0.6"
        android:background="@drawable/rotate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.328" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="137dp"
        android:layout_height="71dp"
        android:gravity="center"
        android:text="ADD FILTERS"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/amaranth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/filter"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/filter"
        app:layout_constraintTop_toBottomOf="@id/filter"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/brightness"
        android:layout_width="141dp"
        android:layout_height="133dp"
        android:background="@drawable/sun"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.281" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="141dp"
        android:layout_height="53dp"
        android:gravity="center"
        android:text="BRIGHTNESS"
        android:textSize="23sp"
        android:textStyle="bold"
        app:fontFamily="@font/amaranth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/brightness"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/brightness"
        app:layout_constraintTop_toBottomOf="@+id/brightness"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="343dp"
        android:layout_height="173dp"
        android:src="@drawable/pictosa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041" />


    <Button
        android:id="@+id/info"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />


</androidx.constraintlayout.widget.ConstraintLayout>